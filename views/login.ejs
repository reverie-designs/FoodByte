<body class="bg-dark">
  <!-- NAVIGATION -->
  <% include partials/_header %>
  <!-- END NAVIGATION -->

  <!-- <div class="text-light m-auto text-center pb-3 h3">Welcome Please Log in or Sign Up before proceeding to order</div> -->

<main class="d-flex justify-content-between login-main">
  <section class="image-randomizer">
    <!-- RANDOM IMAGES -->
    <div class="text-center"><img class="random-image" src="https://assets.tastecooking.com/wp-content/uploads/2018/12/Taste_pizza0587-2000x1369.jpg" alt=""></div>
    <div class="text-center"><img class="random-image" src="https://cdn10.bostonmagazine.com/wp-content/uploads/sites/2/2018/08/RestaurantsInCentralSquare_PAGU_RamencTracyChang-main.jpg" alt=""></div>
    <div class="text-center"><img class="random-image" src="https://www.bgood.com/wp-content/uploads/2017/05/5.15.1-2.jpg" alt=""></div>
  </section>
  <section class="log-in mr-4">
      <button class="btn btn-info btn-block log" id="sign">Sign Up</button>

    <!-- SIGNUP FORM -->
      <form method="POST" id="signup" action="/signup" class="d-none">
        <h1 class="text-light">Sign Up</h1>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="name" class="form-control" name="name" id="name"  placeholder="name">
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Password">
          </div>
          <div class="form-group">
              <label for="password">Phone</label>
              <input type="tel" name="phone" class="form-control" id="phone" placeholder="xxx-xxx-xxxx" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
              required>
          </div>
          <button type="submit" class="btn btn-light">Submit</button>
      </form>

  </section>
  <section class="log-in mr-4" >
      <button class="btn btn-info btn-block log login" id="log">Login</button>

    <!-- LOGIN FORM -->
      <form method="POST" class="signup d-none" id="login" action="/login">
        <h1 class="text-light">Log In</h1>
        <div class="form-group">
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-light">Submit</button>
      </form>

  </section>
</main>


